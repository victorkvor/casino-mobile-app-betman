<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:forceDarkAllowed="false"
    android:background="@drawable/border_windowv2"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:paddingBottom="3dp"
    tools:context=".Mines"
    tools:targetApi="q">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mines_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:shadowColor="@color/neon_acid_green"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="15"
            android:text="@string/mines"
            android:textColor="@color/neon_acid_green"
            android:fontFamily="@font/gamerock"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/mines_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_money"
            android:drawablePadding="8dp"
            android:paddingStart="14dp"
            android:paddingTop="8dp"
            android:paddingEnd="14dp"
            android:paddingBottom="8dp"
            android:shadowColor="@color/gold_rush"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text=""
            android:textColor="@color/gold_rush"
            android:fontFamily="@font/quickmoney"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/image_chips_money"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/mines_settingslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mines_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/neon_acid_green"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                android:text="@string/bet_amount"
                android:textColor="@color/neon_acid_green"
                android:textSize="20sp"
                android:fontFamily="@font/gameria" />

            <EditText
                android:id="@+id/mines_betamount"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/border_spinner"
                android:fontFamily="@font/quickmoney"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                android:shadowColor="@color/gold_rush"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                android:text="100"
                android:textColor="@color/gold_rush"
                android:textSize="20sp"
                app:drawableEndCompat="@drawable/image_chips_money"
                tools:ignore="Autofill,HardcodedText,LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/neon_acid_green"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                android:text="@string/amount"
                android:textColor="@color/neon_acid_green"
                android:textSize="20sp"
                android:fontFamily="@font/gameria" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/mines_minesspinner"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_spinner"
                    android:gravity="center"
                    android:popupBackground="@drawable/border_spinnerfill"
                    android:windowEnterAnimation="@anim/spinner_enter"
                    android:windowExitAnimation="@anim/spinner_exit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/mines_mine"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mines_play"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/border_button_glowred"
        android:shadowColor="@color/white"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="PLAY"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="@font/playerscollege"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mines_settingslayout"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <LinearLayout
        android:id="@+id/mines_rewardlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mines_play">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/neon_acid_green"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                android:text="@string/earnings"
                android:textColor="@color/neon_acid_green"
                android:textSize="20sp"
                android:fontFamily="@font/gameria" />

            <EditText
                android:id="@+id/mines_earnings"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none"
                android:text="0"
                android:textColor="@color/gold_rush"
                android:background="@drawable/border_spinnerfill"
                android:fontFamily="@font/quickmoney"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                android:shadowColor="@color/gold_rush"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10"
                app:drawableEndCompat="@drawable/image_chips_money"
                tools:ignore="Autofill,HardcodedText,LabelFor" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mines_cashout"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:background="@drawable/border_button_glowred"
            android:shadowColor="@color/white"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text="CASHOUT"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/playerscollege"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/minesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/mines_rewardlayout"
        tools:layout_editor_absoluteX="3dp">

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_0_0"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_0_1"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_0_2"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_0_3"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_0_4"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_1_0"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_1_1"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_1_2"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_1_3"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_1_4"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- Fila 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_2_0"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_2_1"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_2_2"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_2_3"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_2_4"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- Fila 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_3_0"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_3_1"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_3_2"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_3_3"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_3_4"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_4_0"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_4_1"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_4_2"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_4_3"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/cell_4_4"
                style="@style/MineCell"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>